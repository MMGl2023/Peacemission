<h1>Письмо</h1>

<p>* Обязательное поле </p>
<% form_for :report, :url=>{:action=>:r}, :html=>{:multipart=>true} do |f| %>
  <%= f.hidden_field :report_type, :value=>'info' %>
  <table class="form">
    <tr>
      <td colspan="2"><h2>Контактная информация:</h2></td>
    </tr>
    <tr>
      <th>Имя: *</th>
      <td>
        <%= f.text_field :name %> 
      </td>
    </tr>
    <tr>
      <th>Email: *</th>
      <td>
        <%= f.text_field :email %>
      </td>
    </tr>
    </tr>
    <tr>
      <td colspan="2"><h2>Сообщение </h2></td>
    </tr>
    <tr>
      <th>Тема: *</th>
      <td>
        <%= f.text_field :subject, :size => 40 %>
      </td>
    </tr>
    <tr>
      <th>Текст: *</th><td></td>
    </tr>
    <tr>
      <td colspan="2">
        <%= f.text_area :details, :cols => 55 %>
      </td>
    </tr>
    <tr>
      <td colspan="2"><h2>Прикрепленные файлы:</h2></td>
    </tr>
    <tr>
      <td colspan="2">
        <input type="file" name="report[file1]" value="" id="report_file1" size="50"><br>
        <input type="file" name="report[file2]" value="" id="report_file2" size="50">
      </td>
    </tr>
    <tr>
      <td colspan="2">
        <%= f.submit 'Отправить' %>
      </td>
    </tr>
  </table>
<% end -%>
