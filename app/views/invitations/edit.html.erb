<h1>Editing invitation</h1>

<%= error_messages_for :invitation %>

<%= form_for(@invitation) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Email</b><br />
    <%= f.text_field :email %>
  </p>

  <p>
    <b>Subject</b><br />
    <%= f.text_field :subject %>
  </p>

  <p>
    <b>Body</b><br />
    <%= f.text_area :body %>
  </p>

  <p>
    <b>Used by</b><br />
    <%= f.text_field :used_by_id %>
  </p>

  <p>
    <b>Used at</b><br />
    <%= f.datetime_select :used_at %>
  </p>

  <p>
    <b>Created by</b><br />
    <%= f.text_field :created_by_id %>
  </p>

  <p>
    <b>Code</b><br />
    <%= f.text_field :code %>
  </p>

  <p>
    <b>Expired at</b><br />
    <%= f.datetime_select :expired_at %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @invitation %> |
<%= link_to 'Back', invitations_path %>
